    <controls:MyListView ItemsSource="{Binding Contents}" ItemTappedCommand="{Binding ShowContentCommand}" HasUnevenRows="True">
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <StackLayout Orientation="Vertical">
                        <Image Source="{Binding Banner}"/>
                        <Label Margin="20, 20, 20, 0" Text="{Binding Name}" Font="Large" TextColor="Black"/>
                        <Label Margin="20, 10, 20, 0" Text="{Binding Description}" Font="Medium" TextColor="Gray"/>
                    </StackLayout>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </controls:MyListView>
</ContentPage>